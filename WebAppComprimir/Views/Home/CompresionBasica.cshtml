@model WebAppComprimir.ViewModel.VMConsulta

@{
    ViewBag.Title = "CompresionBasica";
}

<h2>Compresion de Cadenas</h2>
<h4 class="text-danger">@ViewBag.Error</h4>

@using (Html.BeginForm("CompresionBasica", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h5 class="text-danger"><label id="lblmensaje"></label></h5>

    <div class="panel-group" id="accordion">

        @*Panel*@
        <div class="panel panel-primary" id="panel_1">
            <div class="panel-heading">
                <h4 class="panel-title">Compresion Basica de una cadena</h4>
            </div>
            <div class="panel-body">

                <div class="panel-group row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.CadenaInicial, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CadenaInicial, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CadenaInicial, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="panel-group row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.CadenaComprimida,htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CadenaComprimida, new { htmlAttributes = new { @class = "form-control", @placeholder = "Aqui la cadena comprimida", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.CadenaComprimida, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>

            <div class="panel-footer">
                <input type="submit" value="Comprimir" class="btn btn-success" />
                @Html.ActionLink("Home", "Index", new { }, new { @class = "btn btn-warning" })
            </div>
        </div>



    </div>



}

